<?xml version="1.0" encoding="utf-8"?>
<FrameLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:padding="5dp">

    <TextView
        android:id="@+id/fps_tv"
        android:layout_width="@dimen/fps_size"
        android:layout_height="@dimen/fps_size"
        android:textColor="#fff"
        android:gravity="center"
        android:background="@mipmap/fps_a_grade"
        android:text="@string/go"
    />

    <ImageView
        android:id="@+id/to_chart_tv"
        android:layout_width="@dimen/fps_size"
        android:layout_height="@dimen/fps_size"
        android:layout_marginLeft="45dp"
        android:src="@mipmap/chart_icon"
        android:visibility="invisible"
        android:background="@mipmap/fps_a_grade"
        android:scaleType="centerInside"
    />

    <ImageView
        android:id="@+id/to_jank_stack_tv"
        android:layout_width="@dimen/fps_size"
        android:layout_height="@dimen/fps_size"
        android:layout_marginLeft="90dp"
        android:background="@mipmap/fps_a_grade"
        android:visibility="invisible"
        android:src="@mipmap/jank_icon"
        android:scaleType="centerInside"
    />


</FrameLayout>